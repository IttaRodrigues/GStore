@model GStore.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categoria</h1>
<h4 class="my-4">Alterar</h4>

<div class="card my-4 border-dark border-2 rounded-1">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class=" col-md-8 col-lg-10">
                    <div class="mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control p-2 border-dark" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" id="=Arquivo" name="Arquivo"
                    class="form-control p-2 border-dark border-2 rounded-1" />
            </div>
            </div>
            <div class="col-md-4 col-lg-2">
                <label for="Preview" class="form-label">Pr√©via</label>
                <img id="Preview" src="@Model.Foto" class="img-fluid p-2 border-dark border-2 rounded-1" />
            </div>
             </div>
             <div class="d-flex mt-4">
                <button type= "submit" class="btn btn-outline-success me-2">
                            </form>
    </div>
</div>

<div>
